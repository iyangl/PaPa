<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="back"
            type="Integer"/>

        <variable
            name="title"
            type="String"/>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/video_pic_preview_width"
            android:layout_height="@dimen/video_pic_preview_height"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/bottom_text_margin"
            android:background="@{back}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_below="@+id/image"
            android:padding="@dimen/bottom_text_margin"
            android:text="@{title}"
            android:textColor="@color/black"
            android:textSize="@dimen/bottom_text_size"/>

    </RelativeLayout>

</layout>